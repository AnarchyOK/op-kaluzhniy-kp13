<Window x:Class="Lab4.Afisha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="Афіша фільмів" Height="699" Width="870" Background="White">
    <Grid Background="White" Margin="0,0,0,-6">
        <Button x:Name="Exit" Content="Вийти" HorizontalAlignment="Left" Margin="20,550,0,0" VerticalAlignment="Top" Width="825" Height="64" FontSize="24" FontFamily="Arial" FontWeight="Bold" Click="Exit_Click"/>
