        <Button Name="LogInBtn" Content="Увіти" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" Height="35" Width="200" IsEnabled="False" Click="LogInBtn_Click"/>
        <Label Content="Логін" HorizontalAlignment="Left" Margin="41,35,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="355,35,0,0" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
