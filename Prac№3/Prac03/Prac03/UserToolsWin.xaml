        <TextBox Name="NewPassTB" HorizontalAlignment="Left" Margin="144,114,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="229" Height="34" FontSize="20" TextChanged="TB_TextChanged"/>
