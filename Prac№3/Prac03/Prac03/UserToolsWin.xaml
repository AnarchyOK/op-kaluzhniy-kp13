        xmlns:local="clr-namespace:Prac03"
        mc:Ignorable="d"
        Title="Користувач" Height="339" Width="400" ResizeMode="CanMinimize" WindowStyle="ToolWindow" Closed="Window_Closed" WindowStartupLocation="CenterScreen">
