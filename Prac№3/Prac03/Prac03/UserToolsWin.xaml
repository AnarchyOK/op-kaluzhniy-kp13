        <Button Name="ChangePassBtn" Content="Змінити" HorizontalAlignment="Left" Margin="10,217,0,0" VerticalAlignment="Top" Width="363" Height="44" IsEnabled="False" Click="ChangePassBtn_Click"/>
    </Grid>
</Window>
