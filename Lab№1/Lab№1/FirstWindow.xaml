        <Button Content="Видалити" HorizontalAlignment="Left" Height="34" Margin="547,94,0,0" VerticalAlignment="Top" Width="206" Click="Button_Click_1"/>
        <Button Content="Очистити базу даних" HorizontalAlignment="Left" Height="34" Margin="388,199,0,0" VerticalAlignment="Top" Width="154" Click="Button_Click2"/>

    </Grid>
